			{
				turnFlashlightOff(flashlight1);      //turn flashlight off
			}
		}

		while(1 == 1)
		{
			if (SensorValue(lightSensor)>700)
			{
				turnFlashlightOn(flashlight2, 127);   //turn flashlight on
			}
			if (SensorValue(lightSensor) <= 700)
			{
				turnFlashlightOff(flashlight2);       //turn flashlight off
			}




		}
}
